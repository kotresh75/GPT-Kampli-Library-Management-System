{
  "name": "gptk-library-management-system",
  "version": "1.0.0",
  "description": "GPTK Library Management System",
  "main": "electron/main.js",
  "author": "GPTK",
  "scripts": {
    "start": "concurrently --kill-others \"cross-env BROWSER=none npm start --prefix frontend\" \"wait-on http://localhost:3000 && electron electron/main.js\"",
    "build:frontend": "npm run build --prefix frontend",
    "build:exe": "npm run build:frontend && electron-builder --win nsis",
    "build:msi": "npm run build:frontend && electron-builder --win msi",
    "postinstall": "npm install --prefix frontend --legacy-peer-deps && npm install --prefix backend"
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^25.1.8",
    "puppeteer": "^24.37.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "i18next": "^25.8.0",
    "i18next-browser-languagedetector": "^8.2.0",
    "react-i18next": "^16.5.3"
  },
  "build": {
    "appId": "com.gptk.library",
    "productName": "GPTK Library Manager",
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "assets/icons/College_icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "GPTK Library Manager",
      "include": "build/installer.nsh",
      "installerSidebar": "build/installerSidebar.bmp",
      "uninstallerSidebar": "build/installerSidebar.bmp",
      "installerHeader": "build/installerHeader.bmp"
    },
    "directories": {
      "output": "Final_export"
    },
    "files": [
      "electron/**/*",
      "frontend/build/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/*.log",
          "!**/debug_*.js",
          "!**/test_*.js",
          "!**/check_*.js",
          "!**/inspect_*.js",
          "!**/migrate_*.js"
        ]
      },
      {
        "from": "frontend/public/profile-icons",
        "to": "profile-icons"
      }
    ],
    "asarUnpack": [
      "**/node_modules/sqlite3/**",
      "**/node_modules/bcrypt/**"
    ]
  }
}